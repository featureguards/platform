{
  "$id": "https://schemas.ory.sh/presets/kratos/identity.email.schema.json",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              }
            },
            "recovery": {
              "via": "email"
            },
            "verification": {
              "via": "email"
            }
          },
          "maxLength": 320
        },
        "email_verified": {
          "type": "boolean",
          "description": "Is email verified"
        },
        "first_name": {
          "type": "string",
          "title": "First Name"
        },
        "last_name": {
          "type": "string",
          "title": "Last Name"
        },
        "hd": {
          "type": "string",
          "title": "Domain",
          "readOnly": true
        },
        "profile": {
          "type": "string",
          "title": "Profile Picture",
          "readOnly": true
        }
      },
      "required": ["email", "first_name", "last_name"],
      "additionalProperties": true
    }
  }
}
